<div class="col-xs-10 col-xs-offset-1">

<h1>New Animal</h1>

  <%= simple_form_for @animal do |f| %>
    <%= f.input :name %>
    <%= f.input :latin_name %>
    <%= f.input :description %>
    <%= f.input :status %>
    <br />
    <%= f.submit 'Update', class: 'btn btn-primary' %>
  <% end %>

<%= link_to 'Back', animals_path %>

</div>
